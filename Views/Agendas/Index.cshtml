@model IEnumerable<AgendaMedica.Models.Agenda>

@{
	ViewData["Title"] = "Agenda de Paciente";
}

<h1 class="text-center display-5">Agenda de <span class="fw-bold">Consultas</span></h1>

<p>
	<a asp-action="Create" class="btn btn-outline-light btn-lg w-25"><i class="bi bi-plus-circle"></i>Adicionar</a>
</p>

<table class="table table-info table-striped table-borderless">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Paciente)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Medico)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DataConsulta)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Paciente.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Medico.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataConsulta)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					<a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.AgendaId">Editar</a> |
					<a class="btn btn-light btn-sm" asp-action="Delete" asp-route-id="@item.AgendaId">Exclui</a>
				</td>
			</tr>
		}
	</tbody>
</table>
